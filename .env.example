##############################
# Required API credentials
##############################

# Scrapingdog API key (used for first-stage Google SERP scrape)
SCRAPINGDOG_API_KEY=your-scrapingdog-api-key

# Google Custom Search JSON API key
GOOGLE_API_KEY=your-google-api-key

# Google Custom Search Engine ID (cx) configured to search the public web
GOOGLE_CSE_ID=your-google-cse-id

# Gemini API key
GEMINI_API_KEY=your-gemini-api-key

# Brave Search API key (used as a fallback when Google results score poorly)
BRAVE_API_KEY=your-brave-api-key


##############################
# Optional tuning parameters
##############################

# Number of search results to request from Google (default when unset: 10)
GOOGLE_SEARCH_RESULT_COUNT=10

# Gemini model identifier (default when unset: models/gemini-1.5-pro-latest)
GEMINI_MODEL=models/gemini-1.5-pro-latest

# Number of Brave search results to request (default when unset: 10)
BRAVE_SEARCH_RESULT_COUNT=10

# Number of Scrapingdog (Google SERP) results to request (default when unset: 10)
SCRAPINGDOG_SEARCH_RESULT_COUNT=10


##############################
# Logging
##############################

# Log level: debug | info | warn | error (default when unset: info)
LOG_LEVEL=info


